# Flask Configuration
FLASK_APP=src/webapp/f1dev.py
FLASK_ENV=development
FLASK_DEBUG=1

# API Configuration
# When running in Docker Compose, use container name:
# API_BASE_URL=http://f1_model_service:8000
# When running locally or on different host, use IP/DNS:
# API_BASE_URL=http://localhost:8000
API_BASE_URL=http://f1_model_service:8000

# Server Configuration
HOST=0.0.0.0
PORT=5001

# Logging
# Valid levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG shows all logs including request details
# INFO shows important operations (default)
# WARNING shows only warnings and errors
LOG_LEVEL=INFO
GUNICORN_LOG_LEVEL=INFO

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300